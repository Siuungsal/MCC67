@model MCC67.Models.Produk

<h3>Create Product Page</h3>

<div class="row">
	<div class="col-md-4">
		<form asp-action="Create">
			<div class="form-group">
				<label>Name</label>
				<Input type="text" name="Name"/>
				<div class="col-md-10">
					@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
				</div>
			</div>
			<div>
				<label asp-for="SuplierId" class="lable-control">Supplier</label>
				<select asp-for="SuplierId" class="form-control" asp-items="ViewBag.Supplier">
				</select>
			</div>
			<div>
				<input type="submit" value="Submit"/>
				<div class="col-md-10">
					@Html.ValidationMessageFor(model => model.SuplierId, "", new { @class = "text-danger" })
				</div>
			</div>
		</form>
	</div>
</div>